<%= render "invoices/processes/back_link" %>

<h3 class="mt-3">Process Invoice</h3>

<%= render "invoices/processes/top_nav" %>

<div class="row">
  <div class="col-md-7">
    <% if @invoice.pdf.representable? %>
      <div class="pdf-preview-container text-center">
        <iframe src="<%= url_for(@invoice.pdf) %>" class="pdf-preview"></iframe>
      </div>
    <% else %>
      <%= link_to rails_blob_path(@invoice.pdf, disposition: "attachment") do %>
        No preview, but you can download it
      <% end %>
    <% end %>
  </div>

  <div class="col-md-5">
    <%= turbo_frame_tag dom_id(@form.invoice, 'steps') do %>
      <%= render "invoices/processes/#{@step}_step", form: @form %>
    <% end %>
  </div>
</div>

<%= render "invoices/processes/form_footer", step: @step, current_form_id: "#{@step}_form" %>